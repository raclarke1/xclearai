---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout 
  title="IT Insights Blog" 
  description="Expert insights on managed IT services, cybersecurity, cloud computing, and AI automation for Utah businesses. Stay ahead with the latest IT trends and best practices."
  keywords="IT blog Utah, managed IT insights, cybersecurity tips, cloud computing trends, AI automation articles, MSP blog, IT best practices, technology news Utah"
>
  <section class="page-hero">
    <h1>IT Insights</h1>
    <p>Expert perspectives on IT, cybersecurity, and AI automation for Utah businesses</p>
  </section>

  <section class="blog-section">
    <div class="container">
      {posts.length === 0 ? (
        <p class="no-posts">Coming soon! Check back for IT insights and industry trends.</p>
      ) : (
        <div class="posts-grid">
          {posts.map((post) => (
            <article class="post-card">
              <a href={`/blog/${post.slug}`}>
                {post.data.image && (
                  <img src={post.data.image} alt={post.data.title} class="post-image" />
                )}
                <div class="post-content">
                  <div class="post-meta">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {formatDate(post.data.pubDate)}
                    </time>
                    {post.data.tags.length > 0 && (
                      <span class="post-tags">
                        {post.data.tags.slice(0, 2).map(tag => (
                          <span class="tag">{tag}</span>
                        ))}
                      </span>
                    )}
                  </div>
                  <h2>{post.data.title}</h2>
                  <p>{post.data.description}</p>
                  <span class="read-more">Read more â†’</span>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <h2>Have IT Questions?</h2>
      <p>Our team is here to help. Get expert advice tailored to your business.</p>
      <a href="/contact" class="btn btn-primary btn-lg">Contact Us</a>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    text-align: center;
    padding: 8rem 2rem 4rem;
    background: linear-gradient(180deg, var(--gradient-start) 0%, var(--bg-primary) 100%);
  }
  
  .page-hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .page-hero p {
    color: var(--text-muted);
    font-size: 1.25rem;
  }
  
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .blog-section {
    padding: 4rem 0;
    background: var(--bg-primary);
  }
  
  .no-posts {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    padding: 4rem 0;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
  }
  
  .post-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .post-card:hover {
    border-color: var(--border-hover);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .post-card a {
    display: block;
    color: inherit;
    text-decoration: none;
  }
  
  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .post-content {
    padding: 1.5rem;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }
  
  .post-tags {
    display: flex;
    gap: 0.5rem;
  }
  
  .tag {
    background: var(--accent-light);
    color: var(--accent);
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .post-card h2 {
    font-size: 1.35rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    line-height: 1.3;
  }
  
  .post-card p {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .read-more {
    color: var(--accent);
    font-weight: 500;
    font-size: 0.9rem;
  }
  
  .cta-section {
    padding: 6rem 2rem;
    text-align: center;
    background: var(--bg-secondary);
  }
  
  .cta-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  
  .cta-section p {
    color: var(--text-muted);
    margin-bottom: 2rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .btn-primary {
    background: var(--accent);
    color: white;
  }
  
  .btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
  }
  
  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }
  
  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
