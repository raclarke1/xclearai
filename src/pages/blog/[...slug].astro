---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, remarkPluginFrontmatter } = await post.render();

// Calculate reading time (approx 200 words per minute)
const content = post.body;
const words = content.split(/\s+/).length;
const readingTime = Math.ceil(words / 200);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function formatDateISO(date: Date) {
  return date.toISOString().split('T')[0];
}

// BlogPosting Schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "image": post.data.image || "https://xclearai.com/og-image.png",
  "datePublished": post.data.pubDate.toISOString(),
  "dateModified": post.data.pubDate.toISOString(),
  "author": {
    "@type": "Organization",
    "name": "XclearAI",
    "url": "https://xclearai.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "XclearAI",
    "logo": {
      "@type": "ImageObject",
      "url": "https://xclearai.com/logo.svg"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://xclearai.com/blog/${post.slug}`
  },
  "keywords": post.data.tags.join(", "),
  "wordCount": words,
  "articleBody": post.data.description,
  "inLanguage": "en-US"
};

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://xclearai.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://xclearai.com/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": post.data.title,
      "item": `https://xclearai.com/blog/${post.slug}`
    }
  ]
};
---

<Layout 
  title={post.data.title}
  description={post.data.description}
  keywords={post.data.tags.join(', ')}
>
  <!-- BlogPosting Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  
  <article class="blog-post" itemscope itemtype="https://schema.org/BlogPosting">
    <meta itemprop="headline" content={post.data.title} />
    <meta itemprop="description" content={post.data.description} />
    <meta itemprop="datePublished" content={post.data.pubDate.toISOString()} />
    <meta itemprop="author" content="XclearAI" />
    
    <header class="post-header">
      <div class="container">
        <!-- Breadcrumb Navigation -->
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <ol>
            <li><a href="/">Home</a></li>
            <li><a href="/blog">Blog</a></li>
            <li aria-current="page">{post.data.title.length > 50 ? post.data.title.substring(0, 50) + '...' : post.data.title}</li>
          </ol>
        </nav>
        
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()} itemprop="datePublished">
            {formatDate(post.data.pubDate)}
          </time>
          <span class="separator">•</span>
          <span class="reading-time">{readingTime} min read</span>
          <span class="separator">•</span>
          <span class="author" itemprop="author">by {post.data.author}</span>
        </div>
        <h1 itemprop="name">{post.data.title}</h1>
        <p class="post-description">{post.data.description}</p>
        {post.data.tags.length > 0 && (
          <div class="post-tags">
            {post.data.tags.map(tag => (
              <span class="tag" itemprop="keywords">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>
    
    {post.data.image && (
      <div class="post-image-container">
        <img src={post.data.image} alt={post.data.title} class="post-image" itemprop="image" />
      </div>
    )}
    
    <div class="post-content" itemprop="articleBody">
      <div class="container">
        <Content />
      </div>
    </div>
    
    <footer class="post-footer">
      <div class="container">
        <div class="share-section">
          <h3>Found this helpful?</h3>
          <p>Share it with your network or <a href="/contact">contact us</a> to discuss how we can help your business.</p>
        </div>
        <a href="/blog" class="btn btn-secondary">← More Articles</a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    padding-top: 4rem;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .post-header {
    padding: 4rem 0 3rem;
    background: linear-gradient(180deg, var(--gradient-start) 0%, var(--bg-primary) 100%);
  }
  
  /* Breadcrumb Styles */
  .breadcrumb {
    margin-bottom: 2rem;
  }
  
  .breadcrumb ol {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.875rem;
  }
  
  .breadcrumb li {
    display: flex;
    align-items: center;
    color: var(--text-muted);
  }
  
  .breadcrumb li:not(:last-child)::after {
    content: "›";
    margin: 0 0.5rem;
    color: var(--text-faint);
  }
  
  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
  }
  
  .breadcrumb a:hover {
    text-decoration: underline;
  }
  
  .breadcrumb li[aria-current="page"] {
    color: var(--text-secondary);
    max-width: 200px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    align-items: center;
  }
  
  .post-meta .separator {
    color: var(--text-faint);
  }
  
  .reading-time {
    color: var(--accent);
    font-weight: 500;
  }
  
  .post-header h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  
  .post-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  
  .tag {
    background: var(--accent-light);
    color: var(--accent);
    padding: 0.35rem 1rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .post-image-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .post-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 3rem;
  }
  
  .post-content {
    padding: 2rem 0 4rem;
  }
  
  .post-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  
  .post-content :global(h3) {
    font-size: 1.35rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }
  
  .post-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }
  
  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--text-secondary);
  }
  
  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }
  
  .post-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-muted);
  }
  
  .post-content :global(code) {
    background: var(--bg-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
  }
  
  .post-content :global(pre) {
    background: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .post-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }
  
  .post-footer {
    background: var(--bg-secondary);
    padding: 4rem 0;
    border-top: 1px solid var(--border-color);
  }
  
  .share-section {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .share-section h3 {
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .share-section p {
    color: var(--text-muted);
  }
  
  .share-section a {
    color: var(--accent);
  }
  
  .post-footer .container {
    text-align: center;
  }
  
  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .btn-secondary {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    color: var(--text-secondary);
  }
  
  .btn-secondary:hover {
    border-color: var(--border-hover);
  }
  
  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2rem;
    }
    
    .breadcrumb li[aria-current="page"] {
      max-width: 120px;
    }
  }
</style>
