<style>
  .hero {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(180deg, #f0f9ff 0%, #ffffff 100%);
  }
  
  .hero-content {
    max-width: 800px;
  }
  
  .hero-badge {
    display: inline-block;
    background: #dcfce7;
    border: 1px solid #86efac;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    color: #166534;
    font-weight: 500;
  }
  
  h1 {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #1a1a2e;
  }
  
  .gradient {
    background: linear-gradient(135deg, #2563eb, #7c3aed);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-sub {
    font-size: 1.2rem;
    color: #6b7280;
    max-width: 650px;
    margin: 0 auto 2rem;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .btn-primary {
    background: #2563eb;
    color: white;
  }
  
  .btn-primary:hover {
    background: #1d4ed8;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }
  
  .btn-secondary {
    background: white;
    border: 1px solid #e5e7eb;
    color: #374151;
  }
  
  .btn-secondary:hover {
    background: #f9fafb;
    border-color: #d1d5db;
  }
  
  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  h2 {
    font-size: 2.25rem;
    margin-bottom: 0.5rem;
    color: #1a1a2e;
    text-align: center;
  }
  
  .section-sub {
    color: #6b7280;
    margin-bottom: 3rem;
    font-size: 1.1rem;
    text-align: center;
  }
  
  /* Transition Section */
  .transition {
    padding: 5rem 2rem;
    background: white;
  }
  
  .timeline {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  
  .timeline-item {
    background: #f8fafc;
    border: 1px solid #e5e7eb;
    border-radius: 16px;
    padding: 2rem;
    max-width: 350px;
    text-align: center;
  }
  
  .timeline-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .timeline-content h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: #1a1a2e;
  }
  
  .timeline-content p {
    color: #6b7280;
  }
  
  .timeline-arrow {
    font-size: 2rem;
    color: #2563eb;
    font-weight: bold;
  }
  
  /* Benefits Section */
  .benefits {
    padding: 5rem 2rem;
    background: #f8fafc;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  
  .benefit-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.2s;
  }
  
  .benefit-card:hover {
    border-color: #93c5fd;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
    transform: translateY(-2px);
  }
  
  .benefit-card.highlight {
    background: linear-gradient(135deg, #dbeafe 0%, #ede9fe 100%);
    border-color: #93c5fd;
  }
  
  .benefit-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .benefit-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: #1a1a2e;
  }
  
  .benefit-card p {
    color: #6b7280;
    font-size: 0.95rem;
  }
  
  /* Use Cases Section */
  .use-cases {
    padding: 5rem 2rem;
    background: white;
  }
  
  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .use-case {
    padding: 1.5rem;
    border-left: 3px solid #2563eb;
    background: #f8fafc;
    border-radius: 0 8px 8px 0;
  }
  
  .use-case h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #1a1a2e;
  }
  
  .use-case p {
    color: #6b7280;
    font-size: 0.95rem;
  }
  
  /* Testimonial */
  .testimonial {
    padding: 4rem 2rem;
    background: #f8fafc;
  }
  
  blockquote {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  blockquote p {
    font-size: 1.5rem;
    font-style: italic;
    color: #374151;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  cite {
    color: #6b7280;
    font-style: normal;
    font-weight: 500;
  }
  
  /* CTA Section */
  .cta-section {
    padding: 5rem 2rem;
    background: linear-gradient(180deg, #ffffff 0%, #f0f9ff 100%);
    text-align: center;
  }
  
  .cta-container {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-container p {
    color: #6b7280;
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 768px) {
    .timeline {
      flex-direction: column;
    }
    .timeline-arrow {
      transform: rotate(90deg);
    }
  }
</style>
</Layout>
