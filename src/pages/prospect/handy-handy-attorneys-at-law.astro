  <!-- Chat Widget -->
  <div id="chat-widget" style="position: fixed; bottom: 20px; right: 20px; z-index: 9999;">
    <div id="chat-bubble" onclick="toggleChat()" style="width: 60px; height: 60px; background: linear-gradient(135deg, #1e3a5f, #2d5a8e); border-radius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; box-shadow: 0 4px 15px rgba(0,0,0,0.2); transition: transform 0.2s;">
      <span style="color: white; font-size: 24px;">üí¨</span>
    </div>
    <div id="chat-window" style="display: none; position: absolute; bottom: 70px; right: 0; width: 350px; height: 450px; background: white; border-radius: 16px; box-shadow: 0 10px 40px rgba(0,0,0,0.15); overflow: hidden; flex-direction: column;">
      <div style="background: linear-gradient(135deg, #1e3a5f, #2d5a8e); color: white; padding: 16px; display: flex; align-items: center; gap: 10px;">
        <div style="width: 35px; height: 35px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">ü§ñ</div>
        <div>
          <div style="font-weight: 700; font-size: 0.95rem;">AI Assistant</div>
          <div style="font-size: 0.75rem; opacity: 0.8;">Online ‚Äî typically replies instantly</div>
        </div>
        <span onclick="toggleChat()" style="margin-left: auto; cursor: pointer; font-size: 1.2rem;">‚úï</span>
      </div>
      <div id="chat-messages" style="flex: 1; padding: 16px; overflow-y: auto; display: flex; flex-direction: column; gap: 10px; height: 320px;">
        <div class="bot-msg" style="background: #f1f5f9; padding: 12px 16px; border-radius: 16px 16px 16px 4px; max-width: 85%; font-size: 0.9rem; line-height: 1.5;">Hi! I'm the firm's AI assistant. I can help you understand our practice areas, check if we can help with your case, or schedule a free consultation. What brings you here today?</div>
      </div>
      <div style="padding: 12px; border-top: 1px solid #e2e8f0; display: flex; gap: 8px;">
        <input id="chat-input" type="text" placeholder="Type a message..." style="flex: 1; padding: 10px 14px; border: 1px solid #d1d5db; border-radius: 20px; font-size: 0.9rem; outline: none;" onkeypress="if(event.key==='Enter')sendMsg()" />
        <button onclick="sendMsg()" style="background: #1e3a5f; color: white; border: none; width: 38px; height: 38px; border-radius: 50%; cursor: pointer; font-size: 1rem;">‚Üí</button>
      </div>
    </div>
  </div>

  <script is:inline>
    function toggleChat() {
      const w = document.getElementById('chat-window');
      w.style.display = w.style.display === 'none' ? 'flex' : 'none';
    }
    
    const responses = {
      'schedule': 'I\'d love to help you schedule a consultation! You can use the booking form above, or tell me your preferred date and time and I\'ll check availability.',
      'hours': 'Our office hours are Monday-Friday 8am-5pm, but I\'m available 24/7 to help you get started!',
      'cost': 'Pricing depends on the specific services you need. I\'d recommend booking a free consultation so we can understand your situation and provide an accurate quote.',
      'help': 'I can help with:\n‚Ä¢ Scheduling appointments\n‚Ä¢ Answering questions about our services\n‚Ä¢ Collecting information for your case/project\n‚Ä¢ Connecting you with our team',
      'default': 'Thanks for reaching out! I\'ve noted your question. Would you like to schedule a free consultation to discuss in detail? Our team typically responds within the hour during business hours.'
    };

    function getResponse(msg) {
      const lower = msg.toLowerCase();
      if (lower.includes('schedule') || lower.includes('appointment') || lower.includes('book')) return responses.schedule;
      if (lower.includes('hour') || lower.includes('open') || lower.includes('time')) return responses.hours;
      if (lower.includes('cost') || lower.includes('price') || lower.includes('much')) return responses.cost;
      if (lower.includes('help') || lower.includes('what can')) return responses.help;
      return responses.default;
    }

    function sendMsg() {
      const input = document.getElementById('chat-input');
      const msg = input.value.trim();
      if (!msg) return;
      
      const container = document.getElementById('chat-messages');
      container.innerHTML += '<div style="background: #2563eb; color: white; padding: 12px 16px; border-radius: 16px 16px 4px 16px; max-width: 85%; font-size: 0.9rem; align-self: flex-end;">' + msg + '</div>';
      input.value = '';
      
      setTimeout(() => {
        container.innerHTML += '<div style="background: #f1f5f9; padding: 12px 16px; border-radius: 16px 16px 16px 4px; max-width: 85%; font-size: 0.9rem; line-height: 1.5;">' + getResponse(msg) + '</div>';
        container.scrollTop = container.scrollHeight;
      }, 800);
      container.scrollTop = container.scrollHeight;
    }
  </script>
</Layout>
