</Layout>

<style>
  .page-hero {
    text-align: center;
    padding: 8rem 2rem 4rem;
    background: linear-gradient(180deg, var(--gradient-start) 0%, var(--bg-primary) 100%);
    transition: background 0.3s ease;
  }
  
  .page-hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .page-hero p {
    color: var(--text-muted);
    font-size: 1.25rem;
  }
  
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .services-section {
    padding: 5rem 0;
    background: var(--bg-primary);
    transition: background 0.3s ease;
  }
  
  .services-section.alt {
    background: var(--bg-secondary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .ai-badge {
    background: var(--accent-light);
    color: var(--accent);
    border: 1px solid var(--accent-border);
  }
  
  .it-badge {
    background: linear-gradient(135deg, #dcfce7 0%, #d1fae5 100%);
    color: #166534;
  }
  
  [data-theme="dark"] .it-badge {
    background: rgba(16, 185, 129, 0.15);
    color: #34d399;
  }
  
  .section-header h2 {
    font-size: 2.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .section-intro {
    color: var(--text-muted);
    font-size: 1.1rem;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }
  
  .service-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s ease;
  }
  
  .service-card:hover {
    border-color: var(--border-hover);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .service-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
    background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
  }
  
  .service-icon.it {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }
  
  .service-icon svg {
    width: 28px;
    height: 28px;
    color: white;
  }
  
  .service-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .service-card p {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }
  
  .cta-section {
    padding: 6rem 2rem;
    text-align: center;
    background: linear-gradient(180deg, var(--bg-primary) 0%, var(--gradient-start) 100%);
    transition: background 0.3s ease;
  }
  
  .cta-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  
  .cta-section p {
    color: var(--text-muted);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .btn-primary {
    background: var(--accent);
    color: white;
  }
  
  .btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }
  
  /* Better Together Section */
  .better-together {
    padding: 5rem 0;
    background: var(--bg-primary);
    transition: background 0.3s ease;
  }
  
  .combo-badge {
    background: linear-gradient(135deg, var(--accent-light) 0%, #f3e8ff 100%);
    color: #7c3aed;
    border: 1px solid #c4b5fd;
  }
  
  [data-theme="dark"] .combo-badge {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
    color: #a78bfa;
    border-color: rgba(139, 92, 246, 0.3);
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .benefit-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.75rem;
    transition: all 0.2s;
  }
  
  .benefit-card:hover {
    border-color: var(--border-hover);
    box-shadow: var(--shadow-md);
  }
  
  .benefit-icon {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  }
  
  .benefit-icon svg {
    width: 24px;
    height: 24px;
    color: white;
  }
  
  .benefit-card h3 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .benefit-card p {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }
  
  .combo-highlight {
    background: linear-gradient(135deg, var(--accent-light) 0%, #f3e8ff 100%);
    border: 1px solid var(--accent-border);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  [data-theme="dark"] .combo-highlight {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
    border-color: rgba(139, 92, 246, 0.3);
  }
  
  .combo-highlight p {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.7;
    margin: 0;
