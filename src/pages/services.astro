<style>
  .page-hero {
    text-align: center;
    padding: 8rem 2rem 4rem;
    background: radial-gradient(ellipse at top, rgba(59, 130, 246, 0.15) 0%, transparent 60%);
  }
  
  .page-hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }
  
  .page-hero p {
    opacity: 0.7;
    font-size: 1.25rem;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .services-detail {
    padding: 4rem 0;
  }
  
  .service-block {
    padding: 3rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  
  .service-block:last-child {
    border-bottom: none;
  }
  
  .service-content h2 {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }
  
  .service-lead {
    font-size: 1.1rem;
    opacity: 0.8;
    margin-bottom: 1.5rem;
  }
  
  .service-content ul {
    list-style: none;
  }
  
  .service-content li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    opacity: 0.8;
  }
  
  .service-content li::before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: #3b82f6;
  }
  
  .cta-section {
    padding: 6rem 2rem;
    text-align: center;
    background: #111;
  }
  
  .cta-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .cta-section p {
    opacity: 0.7;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .btn-primary {
    background: #3b82f6;
    color: white;
  }
  
  .btn-primary:hover {
    background: #2563eb;
    transform: translateY(-2px);
  }
  
  .btn-lg {
    padding: 1rem 2rem;
