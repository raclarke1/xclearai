---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "AI automation for small businesses. We deploy intelligent assistants that handle emails, scheduling, and repetitive tasks â€” so you can focus on growth." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Xclear AI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="/" class="logo">
          <span class="logo-x">X</span>clear AI
        </a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/services">Services</a>
          <a href="/about">About</a>
          <a href="/contact" class="nav-cta">Get Started</a>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="footer">
      <div class="footer-container">
        <div class="footer-brand">
          <span class="logo"><span class="logo-x">X</span>clear AI</span>
          <p>AI automation for small businesses.</p>
        </div>
        <div class="footer-links">
          <div class="footer-col">
            <h4>Company</h4>
            <a href="/about">About Us</a>
            <a href="/services">Services</a>
            <a href="/contact">Contact</a>
          </div>
          <div class="footer-col">
            <h4>Contact</h4>
            <p>Utah, USA</p>
            <p>(385) 336-6005</p>
            <a href="mailto:info@xclearai.com">info@xclearai.com</a>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2026 Xclear AI. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    background: #0a0a0a;
    color: #e5e5e5;
    line-height: 1.6;
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .logo-x {
    color: #3b82f6;
  }
  
  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }
  
  .nav-links a {
    opacity: 0.8;
    transition: opacity 0.2s;
  }
  
  .nav-links a:hover {
    opacity: 1;
  }
  
  .nav-cta {
    background: #3b82f6;
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
    font-weight: 500;
    opacity: 1 !important;
  }
  
  .nav-cta:hover {
    background: #2563eb;
  }
  
  main {
    min-height: 100vh;
    padding-top: 4rem;
  }
  
  .footer {
    background: #111;
    border-top: 1px solid rgba(255,255,255,0.1);
    padding: 4rem 2rem 2rem;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .footer-brand p {
    opacity: 0.6;
    margin-top: 0.5rem;
  }
  
  .footer-links {
    display: flex;
    gap: 4rem;
    margin-top: 2rem;
  }
  
  .footer-col h4 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.5;
    margin-bottom: 1rem;
  }
  
  .footer-col a, .footer-col p {
    display: block;
    opacity: 0.7;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }
  
  .footer-col a:hover {
    opacity: 1;
  }
  
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    opacity: 0.5;
    font-size: 0.875rem;
  }
  
  @media (max-width: 768px) {
    .nav-links {
      gap: 1rem;
    }
    .footer-links {
      flex-direction: column;
      gap: 2rem;
    }
  }
</style>
